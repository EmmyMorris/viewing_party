<%= form_with url: login_path, method: :post, local: true do |f| %>
  <%= f.label :username, "Username:" %>
  <%= f.text_field :username %>
  <%= f.label :email, "Email:" %>
  <%= f.text_field :email %>
  <%= f.label :password, "Password:" %>
  <%= f.text_field :password %>
  <%= f.submit 'Log in' %>
<% end %>
